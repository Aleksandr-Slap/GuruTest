 <h1>Update <%= @test.title %> test</h1>

 <%= form_with model: @test do |form| %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %><br>
  </p>
  
  <p>  
    <%= form.label :level %><br>
    <%= form.number_field :level %><br>
  </p>
  
  <p>  
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true %>
  </p>
  
  <p><%= form.submit %></p> 
<% end %>


