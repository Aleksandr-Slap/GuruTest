<h1>Tests</h1>

<p>
  <%= link_to "Create new test", new_test_path %>
</p>

<table class="index_table_style">
  <tr>
    <th>Title</th>
    <th>Level</th>
    <th>Questions</th>
    <th colspan="3">Actions</th>
  </tr>  

  <% @tests.each do |test| %>
    <tr>
      <td><%= test.title %></td>
      <td><%= test.level %></td>
      <td><%= test.questions.count %></td>
      <td><%= link_to "show", test_path(test) %></td>
      <td><%= link_to "update", edit_test_path(test) %></td>
      <td><%= link_to "delete", test_path(test), method: :delete, data: {confirm: "Удаляем?"} %></td> 
    </tr> 
  <% end %> 
</table>    
